# Server Configuration
PORT=8080
GIN_MODE=release

# PubSub Configuration
RING_BUFFER_SIZE=100              # Number of messages stored per topic for replay
SUBSCRIBER_QUEUE_SIZE=100         # Buffer size for each subscriber's message queue

# WebSocket Configuration (in seconds)
PING_PERIOD_SEC=30                # How often to send heartbeat pings
PONG_WAIT_SEC=60                  # Max time to wait for pong response
WRITE_WAIT_SEC=10                 # Max time to write a message

# HTTP Server Timeouts (in seconds)
READ_TIMEOUT_SEC=15               # HTTP read timeout
WRITE_TIMEOUT_SEC=15              # HTTP write timeout
IDLE_TIMEOUT_SEC=0                # HTTP idle timeout (0 = disabled for WebSocket support)

# Shutdown Configuration (in seconds)
SHUTDOWN_TIMEOUT_SEC=10           # Max time for graceful shutdown

# Authentication Configuration (optional)
AUTH_ENABLED=true                 # Enable/disable API key authentication
API_KEYS=test-key # Comma-separated list of valid API keys (e.g., key1,key2,key3)

# Example API Keys (for development/testing only):
# API_KEYS=dev-key-123,test-key-456,prod-key-789

# Example configurations for different scenarios:

# Development (verbose logging, longer timeouts):
# GIN_MODE=debug
# PING_PERIOD_SEC=10
# PONG_WAIT_SEC=30

# Production (optimal performance):
# GIN_MODE=release
# RING_BUFFER_SIZE=100
# SUBSCRIBER_QUEUE_SIZE=100

# High Traffic (larger buffers):
# RING_BUFFER_SIZE=500
# SUBSCRIBER_QUEUE_SIZE=500

# Load Testing (minimal history):
# RING_BUFFER_SIZE=10
# SUBSCRIBER_QUEUE_SIZE=50
# SHUTDOWN_TIMEOUT_SEC=30
